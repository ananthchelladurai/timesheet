        <class>timeSheet.database.entity.HourType</class>
        <class>timeSheet.database.entity.Setting</class>
        <class>timeSheet.database.entity.BaseObject</class>
        <properties>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
        </properties>
    </persistence-unit>
</persistence>
